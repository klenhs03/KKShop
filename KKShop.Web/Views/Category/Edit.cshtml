@model KKShop.DomainModels.Category //nếu đã khai bóa ở viewimport thì có thể chỉ viết tên class

@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên loại hàng: @Html.ValidationMessage(nameof(Model.CategoryName), new { @style = "color: #f00" })</label>
                <input type="text" class="form-control" autofocus name="@nameof(Model.CategoryName)" value="@Model.CategoryName" >
            </div>

            <div class="form-group">
                <label>Mô tả: @Html.ValidationMessage(nameof(Model.Description), new { @style = "color: #f00" })</label>
                <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description">
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"> Lưu dữ liệu</i>
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại </a>
            </div>
        </form>

    </div>
</div>
